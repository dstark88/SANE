{{!-- This page will display the login for providers --}}
<center>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h4>Provider Login</h4>
        <h3 class="error"></h3>
        <form class="login">
          <div class="row">
            <div class="col s12">
              Email Address:
              <div class="input-field inline">
                <input id="email-input" type="email" class="validate">
                <label for="email_inline">Email</label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s12">
              Email Address:
              <div class="input-field inline">
                <input id="password-input" type="password" class="validate">
                <label for="password_inline">Password</label>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-default">Login</button>
        </form>
        <p>Or sign up <a href="/signup">here</a></p>
      </div>
    </div>
  </div>
</center>

