{{!-- This page will display the login for providers --}}
<main>
<center>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Provider Login</h2>
        <h3 class="error"></h3>
        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span> <span class="msg"></span>
        </div>
        <form class="login">
          <div class="row">
            <div class="col s12">
              <div class="input-field inline">
                <input id="email-input" type="email" class="validate">
                <label for="email_inline">Email</label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s12">
              <div class="input-field inline">
                <input id="password-input" type="password" class="validate">
                <label for="password_inline">Password</label>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-default">Login
            <i class="material-icons right">send</i>
          </button>
        </form>
        <p>Or sign up <a href="/signup">here</a></p>
      </div>
    </div>
  </div>
</center>
</main>

