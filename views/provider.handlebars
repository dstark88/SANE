<div class="container">
  <h3> Sites:</h3>
  <table class="striped">
    <thead>
      <tr>
        <th>Facility</th>
        <th>Address</th>
        <th>City/Town</th>
        <th>County</th>
        <th>Zip</th>
        <th>Phone #1</th>
        <th>Phone #2</th>
        <th>Website</th>
        <th>Additional Info</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      {{#each sites}}
      <tr class="collection" data-id="{{id}}"> 
        <td class="collection-item avatar"> {{this.facility}} </td>
        <td class="collection-item avatar"> {{this.address}} </td>
        <td class="collection-item avatar"> {{this.city}} </td>
        <td class="collection-item avatar"> {{this.county}} </td>
        <td class="collection-item avatar"> {{this.zip}} </td>
        <td class="collection-item avatar"> {{this.phone_1}} </td>
        <td class="collection-item avatar"> {{this.phone_2}} </td>
        <td class="collection-item avatar"> <a href="{{this.website}}">{{this.website}}</a></td>
        <td class="collection-item avatar"> {{this.additional_info}} </td>
        <td><button></button><i id="delete" class="material-icons">clear</i></td>
      </tr>
      {{/each}}
      {{!-- Our Handlebars code goes here! --}}
    </tbody>
  </table>
</div>
