<div class="container">
  <h3> Sites:</h3>
  <div class="row">
    <ul class="collection">
      {{#each sites}}
      <div class="col s12">
        <li class="row collection-item avatar" data-id="{{this.id}}">
          <div class="col s6">
            <h3><span class="title">{{this.facility}}</span></h3>
            <p>Address: {{this.address}}, {{this.city}}, {{this.zip}}<br>
              Phone: {{this.phone_1}} <br>
              Website: <a href="{{this.website}}">{{this.website}}</a><br>
              Additional information: {{this.additional_info}}
            </p>
          </div>
          <div class="col s6">
            <center>
              <a class="waves-effect waves-light btn update"><i class="material-icons">edit</i> update</a>
              <a class="waves-effect waves-light btn delete"><i class="material-icons">delete</i> delete</a>
            </center>
          </div>
        </li>
      </div>
      {{/each}}
    </ul>
  </div>
</div>


