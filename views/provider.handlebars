{{!-- we need to write a descrip about what they can do --}}
{{!-- This should ping the db_sites API to pull back records --}}
{{!-- The records should have buttons "DELETE" "UPDATE" --}}


<div class="container">
  <h4> Sites:</h4>

  <table class="striped">
    <thead>
      <tr>
        <th>Facility</th>
        <th>Address</th>
        <th>City/Town</th>
        <th>County</th>
        <th>Zip</th>
        <th>Phone #1</th>
        <th>Phone #2</th>
        <th>Website</th>
        <th>Additional Info</th>
      </tr>
    </thead>

    <tbody>
      {{#each sites}}
      <tr>
        <td> {{this.facility}} </td>
        <td> {{this.address}} </td>
        <td> {{this.city}} </td>
        <td> {{this.county}} </td>
        <td> {{this.zip}} </td>
        <td> {{this.phone_1}} </td>
        <td> {{this.phone_2}} </td>
        <td> <a href="{{this.website}}">{{this.website}}</a></td>
        <td> {{this.additional_info}} </td>
      </tr>
      {{/each}}
      {{!-- Our Handlebars code goes here! --}}
      {{!-- <td><span class="delete glyphicon glyphicon-remove"></span></td> --}}
    </tbody>
  </table>
</div>
